                  .label.label-amber Complete
                td.text-right
                  .text-muted 13
              tr
                td Lore ipsum
                td.text-center
                  sparkline(options="table.sparkOps3", values="table.sparkData3")
                td.text-center
                  .label.label-inverse Delayed
                td.text-right
                  .text-muted 14
        // END table-responsive
      // END panel
  // END row

