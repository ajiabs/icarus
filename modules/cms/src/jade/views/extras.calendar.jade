// START row
.calendar-app(ng-controller="CalendarController as calendar")
  .panel.panel-default
    .panel-body.bg-primary.panel-card.card-md
      ul.list-table.fh.text-center
        li.v-middle
          p.lead.m0 {{calendar.today | date:'EEEE'}}
          .text-hg.m0 {{calendar.today | date:'dd'}}
          p.m0 {{calendar.today | date:'MMMM'}}, {{calendar.today | date:'yyyy'}}
    .panel-body
      .calendar(ng-model='calendar.eventSources', calendar='calendar.myCalendar', ui-calendar='calendar.uiConfig.calendar')
    .panel-footer
      .clearfix
        .pull-right
          button.btn.btn-default.btn-sm(ng-click='calendar.changeLang()') {{calendar.changeTo}}
        .pull-left
          .btn-switch.mb(class="btn-switch-info")
            input(type='checkbox', id='input-btn-switch-info', ng-click="calendar.toggleEventSource(0)", checked="calendar.isVisible(0)")
            label.btn.btn-info(for='input-btn-switch-info')
              em.fa.fa-check
              strong Personal Calendar
          .btn-switch.mb(class="btn-switch-purple")
            input(type='checkbox', id='input-btn-switch-purple', ng-click="calendar.toggleEventSource(2)", checked="calendar.isVisible(2)")
            label.btn.btn-purple(for='input-btn-switch-purple')
              em.fa.fa-check
              strong External Events (Json)
  p.text-muted: small *Click on the calendar to add events