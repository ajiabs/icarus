mixin dropdown_button(type)
  // START button group
  .btn-group.mb-sm.mr(uib-dropdown='dropdown')
    button.btn.dropdown-toggle(type='button', ng-disabled='disabled', class="btn-#{type}", uib-dropdown-toggle="", ripple="")
      = type
      | &nbsp;
      span.caret
    ul.dropdown-menu(role='menu')
      li
        a(href='') Action
      li
        a(href='') Another action
      li
        a(href='') Something else here
      li.divider
      li
        a(href='') Separated link
  // END button group

mixin dropdown_split(type)
  // START button group
  .btn-group(uib-dropdown='dropdown').mb.mr
    button.btn(type='button', class="btn-#{type}") Action
    button.btn.dropdown-toggle(type='button', class="btn-#{type}", uib-dropdown-toggle="", ripple="")
      span.caret
      span.sr-only= type
    ul.dropdown-menu(role='menu')
      li
        a(href='') Action
      li
        a(href='') Another action
      li
        a(href='') Something else here
      li.divider
      li
        a(href='') Separated link
  // END button group

mixin build-anim-panel(animation)
  .p
    // START button group
    .btn-group.mr(uib-dropdown='dropdown')
      button.btn.btn-default.dropdown-toggle.btn-sm(uib-dropdown-toggle="")
        = animation
        | &nbsp;
        b.caret
      ul.dropdown-menu(role='menu', class="animated #{animation}")
        li
          a(href='') Action
        li
          a(href='') Another action
        li
          a(href='') Something else here
        li
          a(href='') Separated link
    // END button group


