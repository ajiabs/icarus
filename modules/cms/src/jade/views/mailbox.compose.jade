.mb-mail-compose
  // START action buttons
  .clearfix.mb
    .pull-left
      button.btn.btn-default.btn-sm(type="button", ng-class="{'active':mail.cc}", ng-click='mail.cc = !mail.cc') CC
      button.btn.btn-default.btn-sm(type="button", ng-class="{'active':mail.bcc}", ng-click='mail.bcc = !mail.bcc') BCC
      button.btn.btn-default.btn-sm(type="button", uib-tooltip="Discard message")
        em.fa.fa-trash
  // END action buttons
  // START Mails
  .panel.panel-default
    .panel-body
      form(role='form-horizontal', method='post')
        .input-group.form-group
          span.input-group-addon.text-sm To:
          input.form-control(type='text')
        .input-group.form-group(ng-show="mail.cc")
          span.input-group-addon.text-sm CC:
          input.form-control(type='text')
        .input-group.form-group(ng-show="mail.bcc")
          span.input-group-addon.text-sm BCC:
          input.form-control(type='text')
        .input-group.form-group
          span.input-group-addon.text-sm Subject:
          input.form-control(type='text')
        .mb-editor
          // Wysiswyg editor
          summernote.b0(ng-model="summernoteText", height="300")
